{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "redirects": [
    {
      "source": "/(.*)",
      "has": [{ "type": "host", "value": "www.rlranks.pro" }],
      "destination": "https://rlranks.pro/$1",
      "statusCode": 308
    }
  ],
  "functions": {
    "api/*.js": { "runtime": "nodejs18.x", "maxDuration": 10 }
  },
  "routes": [
    { "src": "^/$", "dest": "/index.html" },
    { "src": "^/index\\.html$", "dest": "/index.html" },
    { "src": "^/style\\.css$", "dest": "/style.css" },
    { "src": "^/script\\.js$", "dest": "/script.js" },
    { "src": "^/monetize\\.js$", "dest": "/monetize.js" },

    { "src": "^/profile/([^/]+)/(.+)$", "dest": "/api/profile.js?platform=$1&pid=$2" },

    { "src": "^/api/profile$", "dest": "/api/profile.js" },
    { "src": "^/api/predict$", "dest": "/api/predict.js" },
    { "src": "^/api/health$", "dest": "/api/health.js" }
  ]
}