{
  "redirects": [
    {
      "source": "https://www.rlranks.pro/:path*",
      "destination": "https://rlranks.pro/:path*",
      "permanent": true
    }
  ],
  "routes": [
    { "src": "^/$", "dest": "/index.html" },
    { "src": "^/index\\.html$", "dest": "/index.html" },

    { "src": "^/style\\.css$", "dest": "/style.css" },
    { "src": "^/script\\.js$", "dest": "/script.js" },
    { "src": "^/monetize\\.js$", "dest": "/monetize.js" },

    // Public friendly route your UI calls like /profile/steam/7656... -> /api/profile?platform=steam&pid=...
    { "src": "^/profile/([^/]+)/(.+)$", "dest": "/api/profile?platform=$1&pid=$2" },

    // API functions
    { "src": "^/api/profile$", "dest": "/profile.js" },
    { "src": "^/api/predict$", "dest": "/predict.js" },
    { "src": "^/api/health$", "dest": "/health.js" }
  ]
}