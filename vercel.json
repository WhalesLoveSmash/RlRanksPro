{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,

  "redirects": [
    {
      "source": "/(.*)",
      "has": [{ "type": "host", "value": "www.rlranks.pro" }],
      "destination": "https://rlranks.pro/$1",
      "statusCode": 308
    }
  ],

  "rewrites": [
    { "source": "/", "destination": "/sitefrontend/index.html" },
    { "source": "/index.html", "destination": "/sitefrontend/index.html" },
    { "source": "/style.css", "destination": "/sitefrontend/style.css" },
    { "source": "/script.js", "destination": "/sitefrontend/script.js" },
    { "source": "/monetize.js", "destination": "/sitefrontend/monetize.js" },
    { "source": "/profile/:platform/:pid", "destination": "/api/profile.js?platform=:platform&pid=:pid" },
    { "source": "/api/profile", "destination": "/api/profile.js" },
    { "source": "/api/predict", "destination": "/api/predict.js" },
    { "source": "/api/health", "destination": "/api/health.js" }
  ],

  "functions": {
    "api/profile.js": { "runtime": "nodejs20.x", "memory": 1024, "maxDuration": 30 }
  }
}